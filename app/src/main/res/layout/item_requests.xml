        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_request"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:id="@+id/linear_item_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"
            android:layout_below="@id/img_item_request"
            >

            <TextView
                android:id="@+id/txt_name_item_request"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_17ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_job_item_request"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_request_item_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:layout_below="@id/linear_item_request"
            />

        <TextView
            android:id="@+id/txt_reason_item_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/black"
            android:layout_below="@id/txt_request_item_request"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/img_delete_item_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@id/txt_reason_item_request"
            android:layout_centerHorizontal="true"
            />



